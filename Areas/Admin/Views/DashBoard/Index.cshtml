@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: black;
    }

    h3,h4 {
        color: white;
    }
</style>

<h1 style="color:white">Admin Dashboard</h1>
<hr />


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>All Movies</h3>
        </div>
        <div class="col-md-6">
            <a asp-action="Add" asp-controller="DashBoard" asp-area="Admin" class="btn btn-danger float-right"><i class="fas fa-plus"></i>&nbsp; Add Movies</a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped">

            <tr class="table table-secondary">
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Category)</th>
                <th>@Html.DisplayNameFor(m => m.Release)</th>
                <th>@Html.DisplayNameFor(m => m.Ratings)</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var movie in Model)
            {
                <tr>
                    <td class="text-white">@Html.DisplayFor(m => movie.Name)</td>
                    <td class="text-white">
                        @if (movie.Category == "0")
                        {
                            <label>Action</label>
                        }
                        @if (movie.Category == "1")
                        {
                            <label>Adventure</label>
                        }
                        @if (movie.Category == "2")
                        {
                            <label>Horror</label>
                        }
                        @if (movie.Category == "3")
                        {
                            <label>Cartoon</label>
                        }
                        @if (movie.Category == "4")
                        {
                            <label>Romance</label>
                        }
                        @if (movie.Category == "5")
                        {
                            <label>Comedy</label>
                        }
                    </td>
                    <td class="text-white">@Html.DisplayFor(m => movie.Release)</td>
                    <td>
                        @if (movie.Ratings == "0")
                        {
                            <label title="No star rating">No Ratings</label>
                        }
                        @if (movie.Ratings == "1")
                        {
                            <img src="~/Images/Star.png" width="30" height="30" title="one star rating" />
                        }
                        @if (movie.Ratings == "2")
                        {
                            <img src="~/Images/Star.png" width="30" height="30" title="two star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="two star rating" />
                        }
                        @if (movie.Ratings == "3")
                        {
                            <img src="~/Images/Star.png" width="30" height="30" title="three star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="three star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="three star rating" />
                        }
                        @if (movie.Ratings == "4")
                        {
                            <img src="~/Images/Star.png" width="30" height="30" title="four star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="four star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="four star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="four star rating" />
                        }
                        @if (movie.Ratings == "5")
                        {
                            <img src="~/Images/Star.png" width="30" height="30" title="five star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="five star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="five star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="five star rating" />
                            <img src="~/Images/Star.png" width="30" height="30" title="five star rating" />
                        }
                    </td>

                    <td class="text-right">
                        <a class="btn btn-success" asp-action="Movie" asp-route-id="@movie.Id"><i class="fas fa-list"></i>Watch</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@movie.Id"><i class="fas fa-edit"></i>Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@movie.Id"><i class="fas fa-trash"></i>Delete</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <h4>NO Movies Added till Now</h4>
    }

</div>



