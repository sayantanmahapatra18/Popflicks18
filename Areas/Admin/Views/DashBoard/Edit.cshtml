@model Movie
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    body {
        background-image: url('https://images.unsplash.com/photo-1535016120720-40c646be5580?ixid=MXwxMjA3fDB8MHxzZWFyY2h8NHx8bW92aWUlMjB0aGVhdGVyfGVufDB8fDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');
        background-repeat: no-repeat;
        background-size: cover;
        image-resolution: snap;
        transition-property: all;
    }

    h2 {
        color: white;
    }

    h4 {
        color: white;
    }
</style>

<div>

    <h2>Edit Movie</h2>
    <hr />

    <div>
        <form method="post" asp-action="Edit" enctype="multipart/form-data">

            <input hidden asp-for="Id" />

            <div class="form-group row">
                <div class="col-md-3">
                    <h4><label asp-for="Name"></label></h4>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="Name" autocomplete="off" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="Name"></span>
            </div>


            <div class="form-group row">
                <div class="col-md-3">
                    <h4><label asp-for="About"></label></h4>
                </div>
                <div class="col-md-5">
                    <textarea type="text" asp-for="About" autocomplete="off" class="form-control"></textarea>
                </div>
                <span class="text-white" asp-validation-for="About"></span>
            </div>



            <div class="form-group row">
                <div class="col-md-3">
                    <h4><label asp-for="Category"></label></h4>
                </div>
                <div class="col-md-5">
                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<Movie.ECategory>()" class="form-control"></select>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-3">
                    <h4><label asp-for="Director"></label></h4>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="Director" autocomplete="off" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="Director"></span>
            </div>


            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Actors"></label>
                    </h4>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="Actors" autocomplete="off" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="Actors"></span>
            </div>



            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Producer"></label>
                    </h4>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="Producer" autocomplete="off" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="Producer"></span>
            </div>


            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="WatchTime"></label>
                    </h4>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="WatchTime" autocomplete="off" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="WatchTime"></span>
            </div>


            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Release"></label>
                    </h4>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="Release" autocomplete="off" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="Release"></span>
            </div>



            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Ratings"></label>
                    </h4>
                </div>
                <div class="col-md-5">
                    <select asp-for="Ratings" asp-items="Html.GetEnumSelectList<Movie.ERatings>()" class="form-control"></select>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Banner"></label>
                    </h4>
                </div>
                <div class="col-md-5">
                    <input type="file" name="files" id="Projectbanner" asp-for="Banner" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="Banner"></span>
            </div>



            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="MovieLink"></label>
                    </h4>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="MovieLink" autocomplete="off" class="form-control" />
                </div>
                <span class="text-white" asp-validation-for="MovieLink"></span>
            </div>



            <div class="form-group row">
                <div class="col-md-3"></div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-md-6">
                            <button class="btn btn-success form-control" type="submit">Update Movie</button>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" asp-controller="DashBoard" class="btn btn-danger form-control">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>


        </form>

    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
